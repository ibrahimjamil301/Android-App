<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity"
    android:background="#FBD5DF"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        tools:ignore="ContentDescription"
        />

    <TextView
        android:id="@+id/res_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/result"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="110dp"
        android:textSize="48sp"
        android:textStyle="normal|bold"
        android:textColor="@color/pink"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/back_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/back_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        app:shapeAppearanceOverlay="@style/curcular"
        android:background="@color/white"

        />

    <TextView
        android:id="@+id/res_tv2"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:text="@string/benign"
        android:textStyle="normal|bold"
        android:textSize="50sp"
        android:textColor="@color/pink"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/res_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:background="@drawable/background_home_icons"
        />

    <TextView
        android:id="@+id/congrateulation_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/congratulation"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/res_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="90dp"
        android:textSize="48sp"
        android:textStyle="normal|bold"
        android:textColor="@color/pink"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not a cancer patient at all."
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/congrateulation_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="26sp"
        android:textStyle="normal"
        android:textColor="@color/pink"
        />




    <TextView
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/congrateulation_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="220dp"
        android:background="@drawable/background_home_icons"
        />

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/home_img"
        app:layout_constraintTop_toBottomOf="@+id/congrateulation_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="235dp"
        android:layout_marginStart="80dp"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/doc_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/doc_img"
        app:layout_constraintTop_toBottomOf="@+id/congrateulation_tv"
        app:layout_constraintStart_toStartOf="@+id/home_icon"
        android:layout_marginTop="235dp"
        android:layout_marginStart="100dp"
        tools:ignore="ContentDescription"
        />

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_img"
        app:layout_constraintTop_toBottomOf="@+id/congrateulation_tv"
        app:layout_constraintStart_toStartOf="@+id/doc_icon"
        android:layout_marginTop="235dp"
        android:layout_marginStart="100dp"
        tools:ignore="ContentDescription"
        />












</androidx.constraintlayout.widget.ConstraintLayout>